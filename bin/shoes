#!/usr/bin/env sh
case "${MACHTYPE:-}" in
  (*darwin*)
    swt_opt="-J-XstartOnFirstThread"
    ;;
esac

# see http://stackoverflow.com/a/1638397/1810896
SCRIPT=$(readlink -f "$0")
SCRIPTPATH=$(dirname "$SCRIPT")

RUBYSHOES="$SCRIPTPATH/ruby-shoes"

cmd="jruby --1.9 $RUBYSHOES ${swt_opt:-} ${1}"
eval $cmd
